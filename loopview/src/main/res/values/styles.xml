<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_dialog" parent="@android:style/Theme.Dialog">

        <!-- 对话框出现时背景是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 对话框背景(重要) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="popup_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>
</resources>
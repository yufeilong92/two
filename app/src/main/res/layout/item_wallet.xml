<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="64dp"
                                             android:paddingLeft="16dp"
                                             android:paddingRight="10dp"
                                             android:paddingBottom="6dp">

    <ImageView
            android:id="@+id/item_wallet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_recharge_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
    />

    <TextView
            android:id="@+id/item_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_wallet_icon"
    />

    <TextView
            android:id="@+id/item_wallet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text9"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
    />

    <TextView
            android:id="@+id/item_wallet_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="å…ƒ"
            android:textColor="#ffdb4b2a"
            android:textSize="12sp"
            android:paddingBottom="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/item_wallet_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffdb4b2a"
            android:textSize="17sp"
            app:layout_constraintRight_toLeftOf="@+id/item_wallet_text01"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/item_wallet_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffdb4b2a"
            android:textSize="12sp"
            android:paddingBottom="2dp"
            app:layout_constraintRight_toLeftOf="@+id/item_wallet_money"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <View
            android:id="@+id/item_wallet_line"
            style="@style/line_style"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
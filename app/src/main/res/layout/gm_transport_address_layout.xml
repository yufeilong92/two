<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_order_detail_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/circle_bule" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_order_detail_city"
                    style="@style/text_16_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_order_detail_city_address"
                    style="@style/text_11_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_detail_city"
                    android:text="" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_order_detail_loadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_10_white_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_order_detail_load_yellow"
                    android:padding="@dimen/dp_2"
                    android:text="装" />

                <TextView
                    android:id="@+id/tv_order_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_location_triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_order_detail_load"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />

            <ImageView
                android:id="@+id/iv_02"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_below="@id/iv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />

            <ImageView
                android:id="@+id/iv_03"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_below="@id/iv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />

            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/iv_04"
                android:layout_below="@id/iv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />

            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/iv_05"
                android:layout_below="@id/iv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />

            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/iv_06"
                android:layout_below="@id/iv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_location_triangle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_location_triangle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/circle_yellow" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_order_detail_uncity"
                    style="@style/text_16_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_order_detail_uncity_unaddress"
                    style="@style/text_11_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_detail_uncity"
                    android:text="" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_order_detail_unload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_10_white_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_order_detail_load_yellow"
                    android:padding="@dimen/dp_2"
                    android:text="装" />

                <TextView
                    android:id="@+id/tv_order_detail_untime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</merge>
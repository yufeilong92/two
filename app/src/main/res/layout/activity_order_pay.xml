<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_bg"
        tools:context=".ui.find.OrderPayActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="订单支付"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/order_pay_view01"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/icon_order_pay_bg">

        <TextView
                android:id="@+id/order_pay_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总价："
                android:textColor="@color/main_text3"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
        />

        <TextView
                android:id="@+id/order_pay_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要支付"
                android:textColor="@color/main_text9"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_pay_total"
                android:layout_marginTop="12dp"
        />

        <TextView
                android:id="@+id/order_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_color"
                android:textSize="21sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_pay_text01"
                android:layout_marginTop="12dp"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/order_pay_view02"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
    >


        <ImageView
                android:id="@+id/withdrawing_icon02"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_yinlian"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对公转账"
                android:textColor="@color/main_text3"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toRightOf="@+id/withdrawing_icon02"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_radio_red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />

    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/order_pay_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="立即支付"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@color/gm_color"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>
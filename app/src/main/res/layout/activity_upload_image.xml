<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.find.UploadImageActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/upload_image_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleName="上传回单"/>

    <TextView
            android:id="@+id/upload_image_bottom"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="提交回单"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/upload_image_recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/upload_image_top"
            app:layout_constraintBottom_toTopOf="@+id/upload_image_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"/>


</android.support.constraint.ConstraintLayout>
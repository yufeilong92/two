<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bg_white5"
            android:layout_marginTop="50dp">

        <ImageView
                android:id="@+id/dialog_verify_dao_close"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@mipmap/icon_cha"
                android:padding="20dp"
                android:layout_margin="4dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/dialog_verify_dao_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在审核"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="96dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的法人授权书正在审核请耐心等待"
                android:textColor="@color/main_text9"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialog_verify_dao_text01"
                android:layout_marginTop="20dp"
                android:paddingBottom="78dp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
        />

    </android.support.constraint.ConstraintLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_verify_dao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/bg_red5"
                        android:gravity="center"
                        android:text="确认收货"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>


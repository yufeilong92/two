                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/bg_red5"
                        android:gravity="center"
                        android:text="支付运费"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>


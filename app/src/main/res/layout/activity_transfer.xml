<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_bg"
        tools:context=".ui.mine.TransferActivity">


    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/withdraw_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="对公转账"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_card_bg"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="4dp"/>

        <TextView
                android:id="@+id/transfer_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对公转账信息"
                android:textColor="@color/main_text3"
                android:textSize="14sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <View
                android:id="@+id/transfer_dot01"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_red"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_text01"
                app:layout_constraintTop_toTopOf="@+id/transfer_text02"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_text02"/>

        <TextView
                android:id="@+id/transfer_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行账户："
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_dot01"
                app:layout_constraintTop_toBottomOf="@+id/transfer_text01"
        />

        <TextView
                android:id="@+id/transfer_bankno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="46543132556461324532"
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginRight="40dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_text02"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/transfer_text02"
        />


        <View
                android:id="@+id/transfer_dot02"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_red"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_text01"
                app:layout_constraintTop_toTopOf="@+id/transfer_text03"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_text03"/>

        <TextView
                android:id="@+id/transfer_text03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户银行："
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_dot02"
                app:layout_constraintTop_toBottomOf="@+id/transfer_bankno"
        />

        <TextView
                android:id="@+id/transfer_bankname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="中国民生银行郑州经济技术开发区支行"
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginRight="40dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_text03"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/transfer_text03"
        />

        <View
                android:id="@+id/transfer_dot03"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_red"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_text01"
                app:layout_constraintTop_toTopOf="@+id/transfer_text04"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_text04"/>

        <TextView
                android:id="@+id/transfer_text04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户姓名："
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_dot03"
                app:layout_constraintTop_toBottomOf="@+id/transfer_bankname"
        />

        <TextView
                android:id="@+id/transfer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="中州智惠物流股份有限公司"
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginRight="40dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_text04"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/transfer_text04"
        />

        <View
                android:id="@+id/transfer_dot04"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_red"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_text01"
                app:layout_constraintTop_toTopOf="@+id/transfer_text05"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_text05"/>

        <TextView
                android:id="@+id/transfer_text05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附言："
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_dot04"
                app:layout_constraintTop_toBottomOf="@+id/transfer_name"
        />

        <TextView
                android:id="@+id/transfer_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="46543132556461324532"
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:layout_marginRight="40dp"
                app:layout_constraintLeft_toRightOf="@+id/transfer_text05"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/transfer_text05"
        />

        <TextView
                android:id="@+id/transfer_text06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/main_color"
                android:textSize="10sp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/transfer_remark"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_text05"
        />

        <TextView
                android:id="@+id/transfer_text07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附言只能使用一次，请务必添加，否则无法到账"
                android:textColor="@color/main_color"
                android:textSize="10sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@+id/transfer_remark"
                app:layout_constraintLeft_toRightOf="@+id/transfer_text06"
        />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
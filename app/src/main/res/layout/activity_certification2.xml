<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.mine.owners.CertificationActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/cer_dao_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="道认证"
    />

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white5"
                    android:layout_margin="12dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="12dp">

                <TextView
                        android:id="@+id/cer_dao_text01"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="发票抬头"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                />

                <EditText
                        android:id="@+id/cer_dao_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint="请输入发票抬头信息"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toRightOf="@+id/cer_dao_text01"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="12dp"
                        android:lines="1"
                        android:inputType="text"
                />

                <View
                        android:id="@+id/cer_dao_line01"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text01"/>

                <TextView
                        android:id="@+id/cer_dao_text02"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="纳税人识别码"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line01"
                        app:layout_constraintLeft_toLeftOf="parent"
                />

                <EditText
                        android:id="@+id/cer_dao_tax"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint="请输入纳税人识别码"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text02"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:maxLength="20"
                        android:lines="1"
                        android:inputType="textWebEditText"
                />

                <View
                        android:id="@+id/cer_dao_line02"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text02"/>

                <TextView
                        android:id="@+id/cer_dao_text03"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="注册地址"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line02"
                        app:layout_constraintLeft_toLeftOf="parent"
                />

                <EditText
                        android:id="@+id/cer_dao_adr"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint="请输入注册地址"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="12dp"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text03"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:inputType="text"
                />

                <View
                        android:id="@+id/cer_dao_line03"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text03"/>

                <TextView
                        android:id="@+id/cer_dao_text04"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="注册电话"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line03"
                        app:layout_constraintLeft_toLeftOf="parent"
                />

                <EditText
                        android:id="@+id/cer_dao_phone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint=" 请输入注册点电话"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text04"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:maxLines="1"
                        android:inputType="phone"
                />

                <View
                        android:id="@+id/cer_dao_line04"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text04"/>

                <TextView
                        android:id="@+id/cer_dao_text05"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="银行名称"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line04"
                        app:layout_constraintLeft_toLeftOf="parent"
                />


                <EditText
                        android:id="@+id/cer_dao_bank"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint=" 请输入开户银行"
                        android:textColorHint="@color/main_text9"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text05"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:lines="1"
                        android:inputType="text"

                />

                <View
                        android:id="@+id/cer_dao_line05"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text05"/>

                <TextView
                        android:id="@+id/cer_dao_text06"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="银行账号 "
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line05"
                        app:layout_constraintLeft_toLeftOf="parent"
                />


                <EditText
                        android:id="@+id/cer_dao_bankno"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint=" 请输入银行卡号"
                        android:textColorHint="@color/main_text9"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text06"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:inputType="number"
                />

                <View
                        android:id="@+id/cer_dao_line06"
                        style="@style/line_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_text06"/>

                <TextView
                        android:id="@+id/cer_dao_text07"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/add_edit_height"
                        android:text="发票内容"
                        android:gravity="center"
                        android:textColor="@color/main_text6"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@+id/cer_dao_line06"
                        app:layout_constraintLeft_toLeftOf="parent"
                />


                <EditText
                        android:id="@+id/cer_dao_remark"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/add_edit_height"
                        android:hint=" 请输入商品明细"
                        android:textColorHint="@color/main_text9"
                        android:textSize="12sp"
                        android:background="@color/transparent"
                        app:layout_constraintLeft_toLeftOf="@+id/cer_dao_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cer_dao_text07"
                        android:paddingLeft="28dp"
                        android:paddingRight="12dp"
                        android:lines="1"
                        android:inputType="text"
                />

            </android.support.constraint.ConstraintLayout>


            <TextView
                    android:id="@+id/cer_dao_submit"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="提交"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/gm_bg_radio_black"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
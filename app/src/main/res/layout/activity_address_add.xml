<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.mine.address.AddressAddActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/address_add_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="新增地址"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white5"
            android:layout_margin="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="12dp">

        <TextView
                android:id="@+id/address_add_text01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="收货人姓名"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
                android:id="@+id/address_add_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint="请输入收货人姓名"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toRightOf="@+id/address_add_text01"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
        />

        <View
                android:id="@+id/address_add_line01"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_add_text01"/>

        <TextView
                android:id="@+id/address_add_text02"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="手机号码"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/address_add_line01"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
                android:id="@+id/address_add_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint="请输入手机号"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/address_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_add_text02"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
                android:inputType="phone"
        />

        <View
                android:id="@+id/address_add_line02"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_add_text02"/>

        <TextView
                android:id="@+id/address_add_text03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="所在区域"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/address_add_line02"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <ImageView
                android:id="@+id/address_add_icon03"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@mipmap/icon_down"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_add_text03"
                app:layout_constraintBottom_toBottomOf="@+id/address_add_text03"
                android:paddingRight="10dp"
                android:paddingLeft="12dp"/>

        <TextView
                android:id="@+id/address_add_area"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint="请选择所在区域"
                android:textColorHint="#ff999999"
                android:textColor="@color/main_text3"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/address_add_name"
                app:layout_constraintRight_toLeftOf="@+id/address_add_icon03"
                app:layout_constraintTop_toTopOf="@+id/address_add_text03"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
        />

        <View
                android:id="@+id/address_add_line03"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_add_text03"/>

        <TextView
                android:id="@+id/address_add_text04"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="详细地址"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/address_add_line03"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
                android:id="@+id/address_add_adr"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint=" 请输入详细地址请"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/address_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_add_text04"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:maxLines="2"
        />

        <View
                android:id="@+id/address_add_line04"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_add_text04"/>

        <TextView
                android:id="@+id/address_add_text05"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="邮政编码"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/address_add_line04"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
                android:id="@+id/address_add_text06"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="选填项"
                android:textColor="@color/main_text6"
                android:textSize="12sp"
                android:gravity="center_vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_add_text05"
        />

        <EditText
                android:id="@+id/address_add_postal"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint=" 请输入邮政编码"
                android:textColorHint="@color/main_text9"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/address_add_name"
                app:layout_constraintRight_toLeftOf="@+id/address_add_text06"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="@+id/address_add_text05"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:maxLines="2"
                android:inputType="number"
        />

    </android.support.constraint.ConstraintLayout>


    <TextView
            android:id="@+id/address_add_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/gm_bg_radio_black"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>
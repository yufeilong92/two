<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="@dimen/dp_48"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_weather_week"
        style="@style/text_14_white_title"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="星期" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_item_weather_wea"
        android:layout_toLeftOf="@id/tv_item_weather_max_t"
        android:layout_toRightOf="@id/tv_item_weather_week"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80" />
    <TextView
        android:id="@+id/tv_item_weather_max_t"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toLeftOf="@id/tv_item_weather_min_t"
        style="@style/text_14_white_title"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:text="0"
        android:layout_centerVertical="true"
        style="@style/text_14_white_title"
        android:id="@+id/tv_item_weather_min_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
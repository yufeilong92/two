<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingTop="16dp">

    <TextView
            android:id="@+id/item_invoice_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="12sp"
            android:paddingRight="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:paddingLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_invoice_money"
    />

    <TextView
            android:id="@+id/item_invoice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间："
            android:textColor="@color/main_color"
            android:textSize="11sp"
            android:paddingLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_invoice_name"
            android:layout_marginTop="8dp"
    />

    <TextView
            android:id="@+id/item_invoice_state"
            android:layout_width="41dp"
            android:layout_height="17dp"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="12sp"
            android:layout_marginRight="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_invoice_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_invoice_time"
    />

    <TextView
            android:id="@+id/item_invoice_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="16sp"
            android:layout_marginRight="11dp"
            app:layout_constraintRight_toLeftOf="@+id/item_invoice_state"
            app:layout_constraintTop_toTopOf="@+id/item_invoice_state"
            app:layout_constraintBottom_toBottomOf="@+id/item_invoice_state"
    />

    <View
            style="@style/line_style"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/item_invoice_time"
            app:layout_constraintLeft_toLeftOf="parent"
    />

</android.support.constraint.ConstraintLayout>
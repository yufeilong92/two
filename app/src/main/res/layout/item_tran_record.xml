<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/item_tran_record_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
    />


    <TextView
            android:id="@+id/item_tran_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/item_tran_record_from"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
    />

    <TextView
            android:id="@+id/item_tran_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text6"
            android:textSize="11sp"
            app:layout_constraintTop_toTopOf="@+id/item_tran_record_type"
            app:layout_constraintBottom_toBottomOf="@+id/item_tran_record_type"
            app:layout_constraintRight_toRightOf="parent"
    />

    <View
            style="@style/line_style"
            app:layout_constraintTop_toBottomOf="@+id/item_tran_record_type"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
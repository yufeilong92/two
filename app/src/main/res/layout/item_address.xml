<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginLeft="12dp"
                                             android:layout_marginRight="12dp"
                                             android:layout_marginBottom="6dp"
                                             android:paddingLeft="16dp"
                                             android:paddingTop="12dp"
                                             android:background="@drawable/bg_white5">

    <TextView
            android:id="@+id/item_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/item_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp"
    />

    <TextView
            android:id="@+id/item_address_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/item_address_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
    />

    <View
            android:id="@+id/item_address_line"
            style="@style/line_style"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_address_content"
            android:layout_marginTop="12dp"/>


    <LinearLayout
            android:id="@+id/item_address_moren"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingRight="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_address_line"
    >

        <ImageView
                android:id="@+id/item_address_radio"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_radio_red"/>

        <TextView
                android:id="@+id/item_address_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已设置"
                android:textColor="@color/main_color"
                android:textSize="11sp"
                android:layout_marginLeft="6dp"
        />


    </LinearLayout>

    <ImageView
            android:id="@+id/item_address_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_delete_gray"
            android:paddingTop="10dp"
            android:paddingLeft="9dp"
            android:paddingBottom="10dp"
            android:paddingRight="11dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_address_line"
    />

    <ImageView
            android:id="@+id/item_address_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_edit"
            android:paddingTop="11dp"
            android:paddingLeft="9dp"
            android:paddingBottom="10dp"
            android:paddingRight="9dp"
            app:layout_constraintRight_toLeftOf="@+id/item_address_delete"
            app:layout_constraintTop_toBottomOf="@+id/item_address_line"
    />


</android.support.constraint.ConstraintLayout>
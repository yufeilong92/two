<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="142dp"
                                             android:layout_marginLeft="20dp"
                                             android:layout_marginRight="20dp"
                                             android:layout_marginBottom="12dp"
                                             android:id="@+id/item_bank_card_bg"
                                             android:background="@drawable/bg_red_ligtht2">

    <ImageView
            android:id="@+id/item_bank_card_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/gongshangtubiao"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
    />

    <TextView
            android:id="@+id/item_bank_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_bank_card_icon"
            app:layout_constraintTop_toTopOf="@+id/item_bank_card_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_bank_card_icon"
    />

    <TextView
            android:id="@+id/item_bank_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_bank_card_name"
            app:layout_constraintTop_toBottomOf="@+id/item_bank_card_name"
            android:layout_marginTop="6dp"
    />

    <TextView
            android:id="@+id/item_bank_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移除"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_line_white10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_bank_card_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_bank_card_icon"
            android:layout_marginRight="22dp"
    />

    <TextView
            android:id="@+id/item_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_bank_card_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp"

    />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginRight="12dp"
                                             android:layout_marginLeft="12dp"
                                             android:layout_marginBottom="10dp"
                                             android:paddingRight="12dp"
                                             android:paddingLeft="18dp"
                                             android:paddingTop="10dp"
                                             android:paddingBottom="8dp"
                                             android:background="@drawable/bg_white5"
>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ddriver_header"
            android:layout_width="68dp"
            android:layout_height="68dp"
            style="@style/place_image_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="5dp"/>

    <TextView
            android:id="@+id/ddriver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/ddriver_header"
            app:layout_constraintTop_toTopOf="@+id/ddriver_header"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
    />

    <TextView
            android:id="@+id/ddriver_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="19sp"
            app:layout_constraintLeft_toLeftOf="@+id/ddriver_name"
            app:layout_constraintTop_toBottomOf="@+id/ddriver_name"
            android:layout_marginTop="3dp"
    />

    <ImageView
            android:id="@+id/ddriver_icon"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_renzheng"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <View
            android:id="@+id/ddriver_line"
            style="@style/line_style"
            app:layout_constraintTop_toBottomOf="@+id/ddriver_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/item_driver_button1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="指定承运"
            android:textColor="@color/white"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/ddriver_line"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/bg_red5"
    />

    <TextView
            android:id="@+id/item_driver_button2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="联系他"
            android:textColor="@color/main_color"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/ddriver_line"
            app:layout_constraintRight_toLeftOf="@+id/item_driver_button1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:background="@drawable/bg_line_red"
    />

</android.support.constraint.ConstraintLayout>
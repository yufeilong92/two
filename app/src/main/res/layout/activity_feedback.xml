<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.mine.FeedbackActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/address_add_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="意见反馈"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_white5"
            android:layout_margin="12dp">

        <EditText
                android:id="@+id/feedback_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="32dp"
                android:hint="请输入您的建议或意见内容"
                android:gravity="left|top"
                android:textSize="12sp"
                android:textColor="@color/main_text3"
                android:background="@color/transparent"
                android:maxLength="200"
        />

        <TextView
                android:id="@+id/feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/200"
                android:textColor="@color/main_text9"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
        />
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/feedback_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
        android:layout_marginEnd="12dp"
            android:background="@drawable/gm_bg_radio_black"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:drawableTop="@mipmap/ic_order_detail_kefuphone"
                style="@style/text_10_title"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <com.zzzh.akhalteke_shipper.view.custom.SlideLockView
                android:layout_width="match_parent"
                android:layout_marginLeft="38dp"
                android:id="@+id/sli"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@mipmap/ic_tranltie_btn_line"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_tranltie_btn"/>


        <LinearLayout
            android:id="@+id/ll_order_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:background="@color/white"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_order_detail_cancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="取消订单"
                android:gravity="center"
                android:background="@drawable/bg_line_red"
                android:textColor="@color/main_color"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/tv_order_detail_pay"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="支付运费"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_red5"
                android:textColor="@color/white"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/tv_order_detail_sure"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="确认收货"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_red5"
                android:textColor="@color/white"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/tv_order_detail_topro"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="签订协议"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_red5"
                android:textColor="@color/white"
                android:textSize="11sp"
                />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_order_detail_complate"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_60">

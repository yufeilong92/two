                                style="@style/text_18_title"
                                android:textStyle="bold"
                                android:text="1680"
                                android:id="@+id/tv_order_detail_money"
                                android:layout_height="match_parent"/>
                            <TextView android:layout_width="wrap_content"
                                android:text="待支付"
                                android:id="@+id/tv_order_detail_pay_status"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textColor="@color/red_phone"
                                android:paddingRight="@dimen/dp_16"
                                android:paddingLeft="@dimen/dp_16"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingBottom="@dimen/dp_2"
                                android:background="@drawable/bg_line_red"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content">
                            <TextView android:layout_width="@dimen/dp_100"
                                style="@style/text_14_title_fu"
                                android:text="订单编号"

                                android:layout_height="match_parent"/>
                            <TextView android:layout_width="wrap_content"
                                style="@style/text_12_title_qian"
                                android:text="单号"
                                android:id="@+id/tv_order_detail_orderid"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"/>
                            <TextView android:layout_width="wrap_content"
                                android:text="复制"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_16"
                                android:paddingLeft="@dimen/dp_16"
                                android:paddingTop="@dimen/dp_2"
                                android:textSize="@dimen/tv_10"
                                android:id="@+id/tv_order_detail_copy"
                                android:gravity="center"
                                android:background="@drawable/bg_order_detail_qian_gray"
                                android:paddingBottom="@dimen/dp_2"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content">
                            <TextView android:layout_width="@dimen/dp_100"
                                style="@style/text_14_title_fu"
                                android:text="下单时间"
                                android:layout_height="match_parent"/>
                            <TextView android:layout_width="wrap_content"
                                style="@style/text_12_title_qian"
                                android:text="时间"
                                android:id="@+id/tv_order_detail_ordertime"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



                            android:text="已签署"
                            android:id="@+id/tv_order_detail_agreement_status"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            style="@style/text_13_title_qian"
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableRight="@mipmap/icon_toright_small"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/tv_order_detail_freight"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_8"
                        android:id="@+id/rl_order_detail_receipt"
                        android:visibility="visible"
                        android:padding="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_below="@id/rl_order_detail_freight"
                        android:background="@drawable/gm_bg_radio_white"
                        android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                            android:text="回单"
                            style="@style/text_16_title"
                            android:id="@+id/tv_order_detail_receipt"
                            android:layout_height="wrap_content"/>

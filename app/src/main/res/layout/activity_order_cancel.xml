<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        tools:context=".ui.find.OrderCancelActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/order_cancel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="取消运单"
            app:rightText="联系客服"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/order_cancel_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:paddingBottom="2dp"
            android:background="@mipmap/icon_button"
            app:layout_constraintDimensionRatio="W,1:7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="60dp"
    />

    <TextView
            android:id="@+id/order_cancel_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择取消运单原因"
            android:textColor="@color/main_text9"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_cancel_top"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
    />

    <android.support.constraint.ConstraintLayout
            android:id="@+id/order_cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_cancel_text01"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingLeft="18dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
    >

        <ImageView
                android:id="@+id/order_cancel_radio1"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/icon_radio_red"
                android:padding="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="司机时间有变，协商取消"
                android:textColor="@color/main_text3"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_cancel_radio1"
                app:layout_constraintBottom_toBottomOf="@+id/order_cancel_radio1"
        />

        <ImageView
                android:id="@+id/order_cancel_radio2"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/icon_radio"
                android:padding="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_cancel_radio1"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="因厂家原因取消订单"
                android:textColor="@color/main_text3"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_cancel_radio2"
                app:layout_constraintBottom_toBottomOf="@+id/order_cancel_radio2"
        />

        <ImageView
                android:id="@+id/order_cancel_radio3"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/icon_radio"
                android:padding="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_cancel_radio2"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="因天气或其他不可抵抗力原因取消订单"
                android:textColor="@color/main_text3"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_cancel_radio3"
                app:layout_constraintBottom_toBottomOf="@+id/order_cancel_radio3"
        />

        <ImageView
                android:id="@+id/order_cancel_radio4"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/icon_radio"
                android:padding="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_cancel_radio3"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="@color/main_text3"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/order_cancel_radio4"
                app:layout_constraintBottom_toBottomOf="@+id/order_cancel_radio4"
        />
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消运单之前请先和司机电话协商一致"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_cancel_layout"
    />

</android.support.constraint.ConstraintLayout>
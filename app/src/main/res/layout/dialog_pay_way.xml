<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/dialog_payway"
              android:background="@color/white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <EditText
                android:id="@+id/dialog_payway_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColorHint="@color/main_text9"
                android:textColor="@color/main_text3"
                android:textSize="14sp"
                android:hint="请输入支付方式"
                android:gravity="center_vertical|left"
                android:background="@color/transparent"
                android:layout_toLeftOf="@+id/dialog_payway_sure"
                android:lines="1"
                android:paddingLeft="16dp"/>

        <TextView
                android:id="@+id/dialog_payway_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="#ff2391e9"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
        />
    </RelativeLayout>

    <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/main_line"/>

    <com.lipo.views.FlowLayout
            android:id="@+id/dialog_payway_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"/>

</LinearLayout>
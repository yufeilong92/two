<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.mine.wallet.BankAddActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/bank_add_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="添加银行卡"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white5"
            android:layout_margin="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="12dp">

        <TextView
                android:id="@+id/bank_add_text01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="持卡人姓名"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
                android:id="@+id/bank_add_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint="默认显示不用输入"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/main_text3"
                android:background="@color/transparent"
                app:layout_constraintLeft_toRightOf="@+id/bank_add_text01"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
        />

        <View
                android:id="@+id/bank_add_line01"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_text01"/>

        <TextView
                android:id="@+id/bank_add_text02"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="身份证号"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_line01"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView
                android:id="@+id/bank_add_idnumber"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint="请输入纳税人识别码"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/main_text3"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/bank_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bank_add_text02"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
        />

        <View
                android:id="@+id/bank_add_line02"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_text02"/>

        <TextView
                android:id="@+id/bank_add_text03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="银行卡号"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_line02"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
                android:id="@+id/bank_add_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/bank_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bank_add_text03"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
                android:inputType="number"
        />

        <LinearLayout
                android:id="@+id/bank_add_nb"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                app:layout_constraintLeft_toLeftOf="@+id/bank_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bank_add_text03"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingRight="12dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请添加 "
                    android:textColor="@color/main_text9"
                    android:textSize="12sp"
            />

            <TextView
                    android:id="@+id/bank_add_nb_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/main_text3"
                    android:textSize="12sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 的银行卡"
                    android:textColor="@color/main_text9"
                    android:textSize="12sp"
            />

            <ImageView
                    android:id="@+id/bank_add_nb_tishi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    android:src="@mipmap/icon_tishi02"/>

        </LinearLayout>

        <View
                android:id="@+id/bank_add_line03"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_text03"/>

        <TextView
                android:id="@+id/bank_add_text04"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/add_edit_height"
                android:text="手机号"
                android:gravity="center"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/bank_add_line03"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
                android:id="@+id/bank_add_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_edit_height"
                android:hint=" 请输入预留手机号"
                android:textColorHint="#ff999999"
                android:textSize="12sp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/bank_add_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bank_add_text04"
                android:paddingLeft="28dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:singleLine="true"
                android:inputType="phone"
        />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:visibility="gone">

        <ImageView
                android:id="@+id/bank_add_radio"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/icon_radio_red"
                android:padding="8dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textColor="@color/main_text9"
                android:textSize="13sp"
        />
        <TextView
                android:id="@+id/bank_add_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《添加银行卡协议》"
                android:textColor="@color/main_color"
                android:textSize="13sp"
                android:visibility="gone"
        />
    </LinearLayout>


    <TextView
            android:id="@+id/bank_add_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/gm_bg_radio_black"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>
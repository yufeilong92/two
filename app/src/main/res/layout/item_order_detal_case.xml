<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="@dimen/dp_16"
              android:orientation="vertical"
              android:background="@drawable/gm_radio_top_4_white"
              android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:text="请选择取消运单原因"
              android:gravity="center"
              style="@style/text_18_title"
              android:layout_height="wrap_content"/>
   <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                           android:layout_marginTop="@dimen/dp_10"
                                           android:id="@+id/rlv_dialog_order_detail_case"
                                           android:layout_height="wrap_content">

   </android.support.v7.widget.RecyclerView>
    <TextView android:layout_width="match_parent"
              android:textSize="@dimen/tv_13"
              android:textColor="@color/red_phone"
              android:gravity="center"
              android:layout_marginTop="@dimen/dp_10"
              android:text="取消运单之前请先和司机电话协商一致"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="match_parent"
            android:text="提交"
            android:textStyle="bold"
            android:id="@+id/tv_dialog_order_detail_submit"
            style="@style/text_18_wither_title"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_wallect_id_card_back"
            android:layout_height="@dimen/dp_40"/>
</LinearLayout>
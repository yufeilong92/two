<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/bg_white5"
                                             android:layout_marginLeft="12dp"
                                             android:layout_marginRight="12dp"
                                             android:layout_marginBottom="10dp"
                                             android:paddingTop="22dp"
                                             android:paddingBottom="16dp"
                                             android:paddingLeft="12dp"
                                             >

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_source_header"
            android:layout_width="53dp"
            android:layout_height="53dp"
            style="@style/place_image_style"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="5dp"/>

    <TextView
            android:id="@+id/item_source_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_source_header"
            app:layout_constraintRight_toLeftOf="@+id/item_source_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/item_source_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text9"
            android:textSize="11sp"
            android:paddingRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="1dp"
    />

    <TextView
            android:id="@+id/item_source_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_source_path"
            app:layout_constraintLeft_toRightOf="@+id/item_source_header"
            android:layout_marginLeft="12dp"
    />

    <TextView
            android:id="@+id/item_source_infor02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text6"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_source_infor"
            app:layout_constraintLeft_toLeftOf="@+id/item_source_path"
            android:paddingBottom="4dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_source_header"
            app:layout_constraintRight_toRightOf="@+id/item_source_header"
            app:layout_constraintTop_toBottomOf="@+id/item_source_infor02"
    />

    <TextView
            android:id="@+id/item_source_manname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text6"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/item_source_infor02"
            app:layout_constraintLeft_toLeftOf="@+id/item_source_path"
    />

    <ImageView
            android:id="@+id/item_source_phone"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/icon_phone"
            android:padding="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
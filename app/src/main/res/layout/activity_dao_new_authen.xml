<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.owners.DaoNewAuthenActivity">

    <include layout="@layout/gm_title_layout_right" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/text_14_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text="请上传你的营业执照照片核实证件信息内容" />

            <ImageView
                android:id="@+id/iv_dao_auther_zhizhao"
                android:layout_width="@dimen/dp_120"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_authen_business_licence" />

            <TextView
                android:id="@+id/tv_authen_updata_id_z"
                style="@style/text_16_authen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text="点击上营业执照照片" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30">

                <TextView
                    android:id="@+id/tv_dao_authen_zhidao_make"
                    style="@style/text_16_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照" />

                <TextView
                    android:id="@+id/tv_dao_authen_zhidao"
                    style="@style/text_16_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@id/tv_dao_authen_zhidao_make"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30">

                <TextView
                    android:id="@+id/tv_dao_authen_company_make"
                    style="@style/text_16_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/tv_dao_authen_company"
                    style="@style/text_16_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@id/tv_dao_authen_company_make"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30">

                <TextView
                    android:id="@+id/tv_dao_authen_address_make"
                    style="@style/text_16_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照" />

                <TextView
                    android:id="@+id/tv_dao_authen_address"
                    style="@style/text_16_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@id/tv_dao_authen_address_make"
                    android:text="" />
            </RelativeLayout>

            <TextView
                style="@style/text_14_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_16"
                android:text="法人授权书" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_dao_authen_updata_corporation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_dao_authen_updata_corporation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_authen_shangchuan" />
                    <TextView
                        style="@style/text_14_authen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_dao_authen_updata_corporation"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center"
                        android:text="点击上传法人授权书" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_dao_authen_down_corporation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_dao_authen_down_corporation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_authen_corporation_down" />

                    <TextView
                        style="@style/text_14_authen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_dao_authen_down_corporation"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center"
                        android:text="点击下载法人授权书模板" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_dao_auther_submit"
                style="@style/text_16_white_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/gm_bg_radio_black"
                android:text="提交" />

            <TextView
                android:layout_marginBottom="@dimen/dp_16"
                style="@style/text_10_authen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="如果照片与信息不符，请重新拍照，如多次不符请联系客服" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
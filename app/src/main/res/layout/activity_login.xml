<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_dao_authen_bg"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.login.LoginActivity">

    <com.shangxing.views.page.MyBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@mipmap/ic_logo_main_bg" />

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/gm_bg_radio_black_30"
            android:gravity="left|center_vertical"
            android:hint="@string/login_phone_edit"
            android:inputType="phone"
            android:lines="1"
            android:paddingLeft="@dimen/dp_20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/login_getcode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/login_phone"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="48dp"
            android:background="@drawable/gm_bg_radio_black_30"
            android:gravity="left|center_vertical"
            android:hint="@string/login_phone_request"
            android:lines="1"
            android:paddingLeft="@dimen/dp_20"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_getcode"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:src="@drawable/ic_logo_btn_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="我已阅读并同意"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/login_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:text="《马道隐私协议》"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    <TextView
            android:id="@+id/item_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="12sp"
            android:paddingLeft="18dp"
            app:layout_constraintTop_toBottomOf="@+id/item_order_from"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
    />

    <View
            android:id="@+id/item_order_line02"
            style="@style/line_style"
            app:layout_constraintTop_toBottomOf="@+id/item_order_type"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_order_header"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="14dp"
            style="@style/place_image_style"
            app:layout_constraintTop_toBottomOf="@+id/item_order_line02"
            app:roundedCornerRadius="5dp"
            android:layout_marginTop="12dp"/>


    <TextView
            android:id="@+id/item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text3"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_order_header"
            app:layout_constraintTop_toTopOf="@+id/item_order_header"
            app:layout_constraintBottom_toTopOf="@+id/item_order_no"
            android:layout_marginLeft="12dp"
            app:layout_constraintVertical_chainStyle="packed"
    />

    <TextView
            android:id="@+id/item_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_text9"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_order_name"
            app:layout_constraintTop_toBottomOf="@+id/item_order_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_order_header"
            android:layout_marginTop="4dp"
    />

    <ImageView
            android:id="@+id/item_order_call"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_phone"
            app:layout_constraintBottom_toBottomOf="@+id/item_order_header"
            app:layout_constraintTop_toTopOf="@+id/item_order_header"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
    />

    <View
            android:id="@+id/item_order_line03"
            style="@style/line_style"
            app:layout_constraintTop_toBottomOf="@+id/item_order_header"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
            android:id="@+id/item_order_bottom"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@+id/item_order_line03"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone">

        <TextView
                android:id="@+id/item_order_cancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text=""
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/bg_line_red"
                android:textColor="@color/main_color"
                android:textSize="11sp"
        />

        <TextView
                android:id="@+id/item_order_pay"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="已支付"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_line_red"
                android:textColor="@color/main_color"
                android:textSize="11sp"
        />

        <TextView
                android:id="@+id/item_order_sure"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="确认收货"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_line_red"
                android:textColor="@color/main_color"
                android:textSize="11sp"
        />

        <TextView
                android:id="@+id/item_order_agreement"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="签订协议"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_red5"
                android:textColor="@color/white"
                android:textSize="11sp"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
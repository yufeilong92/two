<?xml version="1.0" encoding="utf-8"?>

    <merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <com.shangxing.views.page.MyBarView          android:layout_width="match_parent"
                                                      app:barBg="@color/gm_color"
                                                      android:layout_height="wrap_content"/>
        <RelativeLayout style="@style/MyNoActionbar"
                        android:background="@color/gm_color">
            <ImageView
                    android:src="@mipmap/ic_back"
                    android:onClick="onHomeBack"
                    style="@style/BackImageStype"
                    tools:ignore="OnClick"/>
            <TextView style="@style/myNoActionbar_title"
                      android:id="@+id/gm_tv_activity_title"
            />
            <TextView android:layout_width="wrap_content"
                      android:text=""
                      android:id="@+id/gm_tv_activity_right_title"
                      android:layout_marginRight="@dimen/dp_16"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:textColor="@color/white"
                      android:textSize="@dimen/tv_14"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </merge>

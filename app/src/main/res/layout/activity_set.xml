<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        tools:context=".ui.mine.SetActivity">
    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:id="@+id/address_add_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="设置"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white5"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="12dp">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/set_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_edit_height">

            <ImageView
                    android:id="@+id/set_icon01"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/icon_mine_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="6dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="@color/main_text6"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/set_icon01"

            />

            <View
                    style="@style/next_style"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
            />

        </android.support.constraint.ConstraintLayout>

        <View
                style="@style/line_style"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/set_clear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_edit_height">

            <ImageView
                    android:id="@+id/set_icon02"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/icon_mine_delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="6dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清理缓存"
                    android:textColor="@color/main_text6"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/set_icon02"

            />

            <View
                    style="@style/next_style"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
            />

        </android.support.constraint.ConstraintLayout>

        <View
                style="@style/line_style"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/set_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_edit_height">

            <ImageView
                    android:id="@+id/set_icon03"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/icon_mine_banben"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="6dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本信息"
                    android:textColor="@color/main_text6"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/set_icon03"

            />

            <TextView
                android:id="@+id/tv_seting_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前版本1.0"
                    android:textColor="@color/main_text9"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
            />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <TextView
            android:id="@+id/set_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="退出账户"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="128dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/gm_bg_radio_black"
            app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>
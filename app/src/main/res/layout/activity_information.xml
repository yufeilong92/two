<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_bg"
        tools:context=".ui.mine.InformationActivity">

    <com.zzzh.akhalteke_shipper.view.page.MyTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleName="个人资料"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/information_view01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white5"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp">

        <TextView
                android:id="@+id/information_text01"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:text="头像"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/information_header"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="12dp"
                app:roundAsCircle="true"
                style="@style/header_image_style"
                app:layout_constraintTop_toTopOf="@+id/information_text01"
                app:layout_constraintBottom_toBottomOf="@+id/information_text01"
                app:layout_constraintRight_toRightOf="parent"
        />

        <View
                android:id="@+id/information_line01"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_text01"/>


        <TextView
                android:id="@+id/information_text02"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="身份证号"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_line01"
        />

        <TextView
                android:id="@+id/information_idno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_text3"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/information_text02"
                app:layout_constraintBottom_toBottomOf="@+id/information_text02"
        />

        <View
                android:id="@+id/information_line02"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_text02"/>


        <TextView
                android:id="@+id/information_text03"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="登录手机号"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_line02"
        />

        <TextView
                android:id="@+id/information_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_text3"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/information_text03"
                app:layout_constraintBottom_toBottomOf="@+id/information_text03"
        />

        <View
                android:id="@+id/information_line03"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_text03"/>

        <View
                android:id="@+id/information_idview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/information_text04"
                app:layout_constraintBottom_toBottomOf="@+id/information_text04"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/information_text04"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="实名认证"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_line03"
        />

        <View
                android:id="@+id/information_next01"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:background="@mipmap/icon_toright_small"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/information_text04"
                app:layout_constraintBottom_toBottomOf="@+id/information_text04"/>

        <TextView
                android:id="@+id/information_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_text3"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toLeftOf="@+id/information_next01"
                app:layout_constraintTop_toTopOf="@+id/information_text04"
                app:layout_constraintBottom_toBottomOf="@+id/information_text04"
        />

        <View
                android:id="@+id/information_line04"
                style="@style/line_style"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_text04"/>


        <TextView
                android:id="@+id/information_text05"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="公司名称"
                android:textColor="@color/main_text6"
                android:textSize="13sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information_line04"
        />

        <TextView
                android:id="@+id/information_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_text3"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/information_text05"
                app:layout_constraintBottom_toBottomOf="@+id/information_text05"
        />

    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马道的每位用户都是实名加入，我们承诺绝不泄露用户的任何信息。"
            android:textColor="@color/main_color"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="28dp"
            android:textSize="10sp"
    />

</LinearLayout>